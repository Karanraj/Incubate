<script  type="text/javascript">
  
  $(document).ready(function() {
 //Function to fetch Question      
  
    var wh = new SObjectModel.faq();
    wh.retrieve({limit:10},function(err, records){
     
        if(err) alert(err.message);
        else {

          // Create the table and add columns
          var table = $('<table class="table table-striped" cellspacing="0" width="100%"></table>');
          var thead = $('<thead></thead>');
          var theadtr = $('<tr></tr>');         
          table.appendTo('#apexList');          
          table.append(thead);
          thead.append(theadtr);
          theadtr.append($('<th>Question</th><th>Type</th>'));
          var tbody = $('<tbody></tbody');
          table.append(tbody);
          records.forEach(function(record) {   
            var tbodytr = $('<tr></tr>');         
            tbody.append(tbodytr);
            tbodytr.append($('<td><a href="/apex/dynmicPOC?question=' + record.get("Question_Param__c") +'" target="_blank">'+record.get("Question__c")+'</a></td><td>'+record.get("Type__c")+'</td>'));
          });

      //JQuery DataTable!
      var dataTable = table.DataTable();

        
        }
      });   
   
   });
  </script> 
  
